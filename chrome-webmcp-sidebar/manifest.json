{
  "manifest_version": 3,
  "name": "WebMCP Sidebar Agent",
  "version": "0.1.0",
  "description": "Sidebar chat agent that discovers WebMCP functions and executes them through an LLM.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.siliconflow.cn/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Open WebMCP Sidebar"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
